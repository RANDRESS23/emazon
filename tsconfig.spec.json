/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@src/*": ["src/*"],
      "@atoms/*": ["src/app/shared/components/atoms/*"],
      "@molecules/*": ["src/app/shared/components/molecules/*"],
      "@organisms/*": ["src/app/shared/components/organisms/*"],
      "@constants/*": ["src/app/shared/domain/constants/*"],
      "@enums/*": ["src/app/shared/domain/enums/*"],
      "@interfaces/*": ["src/app/shared/domain/interfaces/*"]
    }
  },
  "files": [
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
